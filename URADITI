                                    {% for gal in gallery %}
                                        <h2>{{gal.title}}</h2>
                                        <img src="{{ vich_uploader_asset(gal, 'imageFile') }}" alt="" /> 
                                         
    

                                     
                                    
                                {% endfor %}
                            {% endif %}
                           </article>