{% extends "base.html.twig"%}

{% block body %}



    <div class="breadcrumb">
        <h2>Догађаји</h2>
        <i class="fa fa-sort-amount-desc" aria-hidden="true">{{knp_pagination_sortable(event,'сортирај по датуму','ev.id')}}</i>
    </div>






    <div class="events">

        {% if event is not empty %}   
            {% for eve in event %}
                <div class="container">
                    <div class="col-md-4">
                        <div class="slider">
                            <div class="img-responsive">
                                <ul class="bxslider">				
                                    <img src="{{ vich_uploader_asset(eve, 'imageFile') }}" alt="" />								
                                    <li><img src="../bundles/app/img/test.jpg" alt=""/></li>	

                                </ul>
                            </div>	
                        </div>
                    </div>
                    <div class="col-md-8">
                        <h2>{{ eve.title }}</h2>
                        {{eve.datetime|date('Y-m-d')}}
                        <p>
                            {{eve.description}}
                        </p>		
                    </div>
                </div>
            {% endfor %}
        {% endif %}

        <div class="navigation">
            {{ knp_pagination_render(event) }}
        </div>   
    </div>
{% endblock %}